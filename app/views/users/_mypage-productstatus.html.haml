.status-wrapper
  .status-wrapper__title 出品した商品
  %ul.status-wrapper__tabs
    %li.status-wrapper__tab__list 出品中
    %li.status-wrapper__tab__list 取引中
    %li.status-wrapper__tab__list 売却済み

  %ul.status-wrapper__contents
    - @products.each do | product |
      .status-wrapper__contents__list
        .status-wrapper__contents__list__icon
          = image_tag '商品画像.jpg', size: "48x48"
          //修正必要。
          
        .status-wrapper__contents__list__detail
          .status-wrapper__contents__list__name
            = product.name
          .status-wrapper__contents__list__count
            %i.far.fa-heart 0
            %i.far.fa-comment-alt 0
            %span.status-tag 出品中
    = paginate @products, window:2





