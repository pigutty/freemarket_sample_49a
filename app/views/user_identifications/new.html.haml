.header
  = render 'top/header'
.mypage__container
  = render "users/mypage-sidebar"
  .mypage__main{"data":@subject_active}
    .mypage__main__header 本人情報の登録
    = form_with model: @user_information, class:'mypage__info__registration__contents' do |f|
      %ul.mypage__info__registration__contents__textbox
        %li.mypage__info__registration__contents__textbox__left
          %p お客さまの本人情報をご登録ください。
          %p 登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
        %li.mypage__info__registration__contents__textbox__right
          = link_to("本人確認書類のアップロード",user_identifications_path)
          %i.fas.fa-chevron-right
      = render 'form-user-text',index:'お名前',content:'樋口 翔'
      = render 'form-user-text',index:'お名前カナ',content:'ヒグチ ショウ'
      = render 'form-user-text',index:'生年月日',content:'1994/07/29'
      = render 'render/input-form-optional',label:"郵便番号",example:"例)1234567", form:f, name: :post_number
      = render 'render/prefecture-optional',form:f
      = render 'render/input-form-optional',label:"市区町村",example:"例)横浜市緑区",form:f, name: :city
      = render 'render/input-form-optional',label:"番地",example:"例)青山1-1-1",form:f, name: :block
      = render 'render/input-form-optional',label:"建物名",example:"例)柳ビル103",form:f, name: :building
      = render 'render/input-form-button',name:"登録する",form:f
      .input-form-box
        = render "render/link_right",text:'本人情報の登録について',address:root_path
.footer
  = render 'top/footer'
